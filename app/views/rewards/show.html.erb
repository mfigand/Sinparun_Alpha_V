

<header id="fh5co-header" class="fh5co-cover" data-section="home" role="banner" style="background-image:url(<%= @imgBackground %>);" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="display-t">
          <div class="display-tc animate-box" data-animate-effect="fadeIn" style="text-align: center;">




            <h2 class="title is-2 sync_label"><%= @reward.name%></h2>
            <br>

            <div class="row statistics2 font_2">
              <section class="col-md-6" style="text-align: left;">
                <ul>
                  <strong>Name:</strong> <%= "#{@reward.name}" %>
                  <br>
                  <strong>Kms cost:</strong> <%= "#{@reward.kms_cost}" %>
                  <br>
                  <strong>Description:</strong> <%= "#{@reward.description}" %>
                  <br>
                  <strong>Valid from:</strong> <%= "#{@reward.valid_from.to_date}" %>
                  <br>
                  <strong>Valid through:</strong> <%= "#{@reward.valid_through.to_date}" %>
                  <br>
                  <strong>Available units:</strong> <%= "#{@reward.available_units}" %>
                  <br>
                  <strong>Reserved units:</strong> <%= "#{@reward.reserved_units}" %>
                  <br>
                  <strong>Charged units:</strong> <%= "#{@reward.charged_units}" %>
                  <br>
                </ul>
              </section>

              <section class="col-md-6">
                <div class="img_show_reward" >
                  <%= image_tag @reward.image.url(:medium)  %>
                </div>
              </section>
            </div>
            <br>
            <a href="<%= company_branch_rewards_path(current_company.id,params[:branch_id]) %>">My Rewards</a>
            <br>
            <a href="<%= company_path(current_company.id)%>">Back to Company profile</a>



                 
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
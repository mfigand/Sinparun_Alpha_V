
<header id="fh5co-header" class="fh5co-cover" data-section="home" role="banner" style="background-image:url(<%= @imgBackground %>);" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="display-t">
          <div class="display-tc animate-box" data-animate-effect="fadeIn" style="text-align: center;">

            <div class="col-lg-12 col-sm-12">
              <div class="col-lg-2 col-sm-2 card hovercard" >

                  <div class="useravatar pop">
                      <img id="user_avatar" alt=<%= current_user.name %> src=<%= current_user.avatar.url(:medium) %>>
                  </div>
                  <div class="card-info"> 
                      <span class="card-title"> <a href=<%= edit_user_path(current_user.id) %> style="color: #828282"><%= current_user.name %></a></span>
                  </div>

              </div>
              <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                  <div class="btn-group" role="group">
                      <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                          <div class="hidden-xs">Races</div>
                      </button>
                  </div>
                  <div class="btn-group" role="group">
                      <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                          <div class="hidden-xs">Coupons</div>
                      </button>
                  </div>
                  <div class="btn-group" role="group">
                      <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                          <div class="hidden-xs">Synchronize kms</div>
                      </button>
                  </div>
              </div>

              <div class="well">
                <div class="row tab-content">

                  <div class="col-lg-12 col-sm-12 tab-pane fade in active" id="tab1">
                    <div class="col-lg-4 col-sm-4">
                      <h5 class="kms_counter"><%= current_user.km == nil ? 0 : current_user.km.sinparun_kms %></h5>
                      <h5>Kms Sinpa</h5>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                      <h5 class="total_kms_counter"><%= current_user.km == nil ? 0 : current_user.km.total_kms %></h5>
                       <h5>Total kms</h5>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                      <h5 class="level_counter"><%= current_user.km == nil ? 0 : current_user.km.level %></h5>
                      <h5><i class="icon-star"></i> Level</h5>
                    </div>
                  </div>
                  
                  <div class="col-lg-12 col-sm-12 tab-pane fade in" id="tab2">
                    <div class="col-lg-6 col-sm-6">
                      <h3>Active Coupons</h3>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                      <h3>All Coupons</h3>
                    </div>
                  </div>

                  <div class="col-lg-12 col-sm-12 tab-pane fade in" id="tab3">

                    <h6 class="message"></h6>

                    <div class="col-sm-2">
                      <button class="js-btn-nike sync_button" type="button" name="button">
                        <img src="/images/nike_logo.jpg" alt="" />
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button class="js-btn-runtastic sync_button" type="button" name="button">
                        <img src="/images/runtastic.png" alt="" />
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button class="sync_button tooltipped " data-position="top" data-delay="50" data-tooltip="Coming soon" type="button" name="button">
                        <img src="/images/endomondo.jpg" alt="" />
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button class="sync_button tooltipped " data-position="top" data-delay="50" data-tooltip="Coming soon" type="button" name="button">
                        <img src="/images/runkeeper_icon.png" alt="" />
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button class="sync_button tooltipped " data-position="top" data-delay="50" data-tooltip="Coming soon" type="button" name="button">
                        <img src="/images/sportstracker.png" alt="" />
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button class="sync_button tooltipped " data-position="top" data-delay="50" data-tooltip="Coming soon" type="button" name="button">
                        <img src="/images/tomtom.png" alt="" />
                      </button>
                    </div>

                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Modal -->
<div id="myModal" class="modal">
  <!-- The Close Button -->
  <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>
  <!-- Modal Content (The Image) -->
  <img class="modal-content" id="img01">
  <!-- Modal Caption (Image Text) -->
  <div id="caption"></div>
</div>
</header>

